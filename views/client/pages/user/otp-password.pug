extends  ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug

block main 
  +error(5000) 
  .container.my-5 
   .row.justify-content-center 
    .col-8 
     h1(class="text-center") Nhập mã xác thực
     form(
       action="/user/password/otp"
       method="POST"
  
     ) 
       
       div(class="form-group")
        label(for="email") Email*
        input(
         type="email"
         class="form-control"
         id="email"
         name="email"
         value=email
        )
       div(class="form-group")
        label(for="email") Mã OTP
        input(
         type="text"
         class="form-control"
         id="otp"
         name="otp"
        )
        div(class="form-group")
         button(
           type="submit"
           class="btn btn-primary"
         ) Xác nhận
   
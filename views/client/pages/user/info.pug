extends  ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug

block main 
  
   h1(class="mb-4" ) Thông tin cá nhân
     if(user.thumbnail)
      img(src=user.thumbnail width="150px" class="mb-4")
     else
      img(src="/admin/omages/avatar.png" width="150px") 
     if(user.fullName) 
      p Họ tên :<b>#{user.fullName}</b>
     if(user.email) 
      p Email :<b>#{user.email}</b>
     if(user.phone) 
      p Số điện thoại :<b>#{user.phone}</b>
     if(user.fullName) 
      p 
       span Trạng thái 
       span
        <b>#{user.status==="active" ? "Hoạt động" : "Dừng hoạt động"} </b>
     
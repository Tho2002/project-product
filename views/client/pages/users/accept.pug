extends  ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
  
  .container.my-3  
   include ../../partials/list-btn-user.pug 
   .row 
    .col-12 
     +box-head("Lời mời đã nhận")
   .row(data-users-accept=user.id)
    each user in users
     .col-6(user-id=user.id)
      div(class="box-user")
       div(class="inner-avatar")
        img(
         src=(user.avatar?user.avatar:"/image/avatar.jpg")
         alt=user.fullName
        )
       div(class="inner-info")
          div(class="inner-name") #{user.fullName}
          div(class="inner-buttons")
           button(
             btn-accept-friend=user.id
             class="btn btn-sm btn-primary mr-1"

           ) Chấp nhận
           button(
              btn-refuse-friend=user.id
              class="btn btn-sm btn-secondary mr-1"
           ) Xóa
           button(
               btn-deleted-friend=user.id
               class="btn btn-sm btn-secondary mr-1"
               disabled
           ) Đã xóa
             button(
             btn-accepted-friend=user.id
             class="btn btn-sm btn-primary mr-1"
             disabled
           ) Đã chấp nhận
block script 
   script(src="/js/users.js")        
extends ../../layouts/default.pug 
block main
 h1(class="mb-4" ) Thông tin cá nhân
 if(user.thumbnail)
  img(src=user.thumbnail width="150px" class="mb-4")
 else
  img(src="/admin/omages/avatar.png" width="150px") 
 if(user.fullName) 
  p Họ tên :<b>#{user.fullName}</b>
 if(user.email) 
  p Email :<b>#{user.email}</b>
 if(user.phone) 
  p Số điẹn thoại :<b>#{user.phone}</b>
 if(user.fullName) 
  p 
   span Trạng thái 
   span
    <b>#{user.status==="active" ? "Hoạt động" : "Dừng hoạt động"} </b>
 if(role.title)
  p Phân quyền :<b>#{role.title}</b>
   
 a(
    href=`${prefixAdmin}/my-account/edit`
    class="btn btn-primary"
 ) Chỉnh sửa thông tin
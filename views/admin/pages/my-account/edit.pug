extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main  
  +alert(4000)
  +error(4000)
  h1(class="mb-4" )  Chỉnh sửa  tài khoản cá nhân
   form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`  
        method="POST"
        enctype="multipart/form-data"
     ) 
    div(class="form-group")
     label(for="fullName") Họ tên*
     input(
      type="text"
      class="form-control"
      id="fullName"
      name="fullName" 
      required
      value=user.fullName
     )
    div(class="form-group")
       label(for="email") Email*
       input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        value=user.email
       )
    div(class="form-group")
       label(for="password") Mật khẩu*
       input(
        type="password"
        class="form-control"
        id="password"
        name="password"
      
        
       )    
    div(class="form-group")
       label(for="phone") Số điện thoại
       input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        value=user.phone
       )
    div(
       upload-image
       class="form-group"
      ) 
       label(for="thumbnail") Ảnh
       input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        upload-image-input
        accept="image/*"
       )
       img(
          src=user.thumbnail
          upload-image-preview
          class="image-preview"
       )
    div(class="form-group")
    button(
      type="submit"
      class="btn btn-primary"
    ) Tạo mới         